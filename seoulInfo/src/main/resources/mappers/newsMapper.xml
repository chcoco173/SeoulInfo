<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dao.NewsDAO">

	<!-- 해당 구의 모든 뉴스 가져오기 -->
	<select id="getNews" resultType="NewsVO"
		parameterType="String">
		SELECT *
		FROM news
		<if test="area != '전체'">
		WHERE news_area = #{news_area}
		</if>
	</select>
	
	<!-- 해당 뉴스 상세 조회 -->
	<select id="getNewsById" resultType="NewsVO" parameterType="Integer">
        SELECT * FROM news WHERE news_id = #{news_id}
    </select>

</mapper>
